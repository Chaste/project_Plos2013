<?xml version="1.0"?>
<pycml_config>
  
  <command_line_args>
    <arg>--expose-annotated-variables</arg>
    <arg>--assume-valid</arg>
  </command_line_args>
  
  <!--
  Override the default lookup table bounds for LR91:
  needed for the backward Euler model in convergence/performance tests.
-->
  <for_model id="luo_rudy_1991">
    <lookup_tables>
        <lookup_table>
            <var type='config-name'>transmembrane_potential</var>
            <min>-100.0001</min>
            <max>120.9999</max>
        </lookup_table>
    </lookup_tables>
  </for_model>
  
</pycml_config>